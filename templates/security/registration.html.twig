{% extends 'base.html.twig'%}

{% block body %}
    <h1>Inscription sur le site</h1>

    {{ form_start(form)}}
    {{ form_row(form.username, {'label': 'Nom d\'utilisateur','attr': {'placeholder': 'Pseudo de l\'utilisateur'}})}}
    {{ form_row(form.email, {'label': 'Adresse E-mail','attr': {'placeholder': 'Entrez ici votre adresse e-mail'}})}}
    {{ form_row(form.password, {'label': 'Mot de passe','attr': {'placeholder': 'Entrez un mot de passe'}})}}
    {{ form_row(form.confirm_password, {'label': 'Confirmer le mot de passe','attr': {'placeholder': 'Entrez de nouveau mot de passe'}})}}

    <button type="submit" class="btn btn-success">S'inscrire</button>
    {{ form_end(form)}}
{% endblock %}